{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "react-app/jest",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:import/recommended",
        "airbnb",
        "prettier"
    ],
    "overrides": [
        {
            "files": [
                "src/**/*Slice.js"
            ],
            "rules": {
                "no-param-reassign": [
                    "error",
                    {
                        "props": false
                    }
                ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/prefer-default-export": "off",
        "react/jsx-props-no-spreading": "off"
    }
}
